{
    "name": "Fiverr Notifications",
    "version": "1.0.0",
    "description": "Unofficial Fiverr Chrome Extentions",
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "img/geek-16.png",
        "32": "img/geek-32.png",
        "48": "img/geek-48.png",
        "128": "img/geek-128.png"
      }
    },
    "permissions": ["storage", "notifications", "background", "http://www.fiverr.com/","https://www.fiverr.com/"],
    "web_accessible_resources": [
        "img/geek-48.png"
      ],
    "manifest_version": 2
  }